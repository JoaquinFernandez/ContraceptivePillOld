<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/select_pill_type_pill_not_taken_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/select_pill_type_pill_not_taken_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pill_not_taken" />

        <TextView
            android:id="@+id/select_pill_type_pill_not_taken_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/select_pill_type_pill_not_taken_image"
            android:text="@string/pill_not_taken"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_pill_type_pill_taken_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/select_pill_type_pill_taken_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pill_taken" />

        <TextView
            android:id="@+id/select_pill_type_pill_taken_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/select_pill_type_pill_taken_image"
            android:text="@string/pill_taken"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_pill_type_pill_taken_late_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/select_pill_type_pill_taken_late_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pill_taken_late" />

        <TextView
            android:id="@+id/select_pill_type_pill_taken_late_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/select_pill_type_pill_taken_late_image"
            android:text="@string/pill_taken_late"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_pill_type_pill_pending_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/select_pill_type_pill_pending_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pill_pending" />

        <TextView
            android:id="@+id/select_pill_type_pill_pending_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/select_pill_type_pill_pending_image"
            android:text="@string/pill_pending"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_pill_type_pill_rest_day_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/select_pill_type_pill_rest_day_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pill_rest_day" />

        <TextView
            android:id="@+id/select_pill_type_pill_rest_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/select_pill_type_pill_rest_day_image"
            android:text="@string/pill_rest_day"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_pill_type_pill_placebo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/select_pill_type_pill_placebo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/pill_placebo" />

        <TextView
            android:id="@+id/select_pill_type_pill_placebo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/select_pill_type_pill_placebo_image"
            android:text="@string/pill_placebo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/select_pill_type_button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".6"
            android:text="@string/button_cancel" />
    </LinearLayout>

</LinearLayout>